{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "declaration": true,
    "sourceMap": false,
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@contracts/*": ["contract/*"],
      "@abi/*": ["../abi/*"],
      "@src/*": ["*"]
    },
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true
  },
  "include": [
    "src/index.ts",
    "src/main.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
